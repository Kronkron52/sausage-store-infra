[Unit]
Description=Sausage Store Backend
After=network.target

[Service]
User={{ backend_service_user }}
Group={{ backend_service_group  }}
Environment="REPORT_PATH={{ backend_report_directory }}"
Environment="LOG_PATH={{ backend_log_path }}"
WorkingDirectory={{ backend_working_directory }}
Restart=always
ExecStart=/usr/lib/jvm/java-16-openjdk-amd64/bin/java -jar /opt/sausage-store/backend/sausage-store.jar
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target 